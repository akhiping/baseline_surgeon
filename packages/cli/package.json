{
  "name": "@baseline-surgeon/cli",
  "version": "0.1.0",
  "description": "Command-line interface for Baseline Surgeon",
  "type": "module",
  "main": "./dist/index.js",
  "types": "./dist/index.d.ts",
  "bin": {
    "baseline-surgeon": "./dist/cli.js"
  },
  "exports": {
    ".": {
      "types": "./dist/index.d.ts",
      "import": "./dist/index.js"
    }
  },
  "files": [
    "dist/**/*"
  ],
  "scripts": {
    "build": "tsc",
    "dev": "tsc --watch",
    "typecheck": "tsc --noEmit",
    "lint": "eslint src/**/*.ts",
    "test": "vitest",
    "clean": "rm -rf dist"
  },
  "dependencies": {
    "@baseline-surgeon/core": "file:../core",
    "@baseline-surgeon/transforms": "file:../transforms",
    "@baseline-surgeon/reporters": "file:../reporters",
    "commander": "^11.0.0",
    "chalk": "^5.3.0",
    "ora": "^7.0.0"
  },
  "devDependencies": {
    "typescript": "^5.2.0",
    "vitest": "^0.34.0",
    "@types/node": "^20.0.0"
  }
} 